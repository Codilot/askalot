
  <div class="container text-center jumbotron-wrapper">
    <% if user_signed_in? %>
      
      <div class="jumbotron col-md-8 col-lg-4">
        <h1 class="display-4">Let's get started</h1>
        <p class="lead">Choose your experience level</p>
        <hr class="my-4">
        <% if @user.present? %>

          <%= render "users/expertise_form", locals:{user: @user} %>
          <p class="lead">
            <%= link_to 'Continue without experience', pages_index_path, class: "btn btn-link btn-sm" %>
          </p>
        <% end %>
      </div>

    <% else %>

      <div class="jumbotron col-md-8 col-lg-4">
        <h1 class="display-4">Ask the Web Developer</h1>
        <p class="lead">Stuck with HTML, CSS or JavaScript features? Our experts give you advise</p>
        <hr class="my-4">
        <p>Sign up now and connect to a Web Developer.</p>
        <p class="lead">
          <%= link_to 'Sign up now', new_user_registration_path, class: "btn btn-outline-primary btn-lg" %>
        </p>
      </div>

    <% end %>
  </div>
