<div class="container">
  <div class="row form-wrapper">
    <div class="col-md-8 col-lg-4 text-center form">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, "Your Email" %>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <%= fa_icon "envelope" %>
            </div>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Your Password" %>
        <% if @minimum_password_length %>
        <small>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </small>
        <% end %>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <%= fa_icon "lock" %>
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <%= fa_icon "lock" %>
            </div>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Go", class: "btn btn-outline-primary btn-lg" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>


    </div>
  </div>
</div>