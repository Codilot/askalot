<div class="container">
  <div class="row form-wrapper">
    <div class="col-md-8 col-lg-4 text-center form">

      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group compact-form-group">
          <%= f.label :email, class: "sr-only" %>
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text compact-form-top">
                <%= fa_icon "envelope" %>
              </div>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
          </div>
          <%= f.label :password, class: "sr-only" %>
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text compact-form-bottom">
                <%= fa_icon "unlock-alt" %>
              </div>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

      <div class="form-group remember_me">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
      </div>

      <div class="actions">
        <%= f.submit "Go", class: "btn btn-outline-primary btn-lg" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
